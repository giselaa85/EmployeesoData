<mvc:View
    controllerName="logaligroup.logali.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <content>
            <HBox>
                <Label
                    id="labelEmployee"
                    text="{i18n>labelEmployee}"
                    class="sapUiSmallMarginTop sapUiSmallMarginEnd"
                />
                <Input
                    id="inputEmployee"
                    maxLength="6"
                    width="200px"
                    class="sapUiSmallMarginEnd"
                    value="{country>/EmployeeID}"
                />
                <Label
                    id="labelCountry"
                    text="{i18n>labelCountry}"
                    class="sapUiSmallMarginTop sapUiSmallMarginEnd"
                />
                <!-- visible="false" -->
                <!-- <ComboBox
                    id="comboCountry"
                    visible="false"
                    class="sapUiSmallMargin"
                >
                    <core:Item
                        key="{i18n>keyUS}"
                        text="{i18n>valueUS}"
                    />
                    <core:Item
                        key="{i18n>keyUK}"
                        text="{i18n>valueUK}"
                    />
                    <core:Item
                        key="{i18n>keyES}"
                        text="{i18n>valueES}"
                    />
                </ComboBox> -->
                <Select
                    id="comboCountry"
                    class="sapUiSmallMarginEnd"
                    forceSelection="false"
                    selectedKey="{country>/CountryKey}"
                    items="{
                path: 'country>/ListCountry',
                sorter: { path: 'text' }
            }"
                >
                    <core:Item
                        key="{country>Key}"
                        text="{country>Text}"
                    />
                </Select>
                <Button
                    text="{i18n>filter}"
                    icon="sap-icon://search"
                    press="onFilter"
                    class="sapUiSmallMarginEnd"
                />
                <Button
                    text="{i18n>clearFilter}"
                    icon="sap-icon://clear-filter"
                    press="onClearFilter"
                    class="sapUiSmallMarginEnd"
                />
            </HBox>
            <Button
                id="btnShowCity"
                text="{i18n>showCity}"
                visible="{jsonModelConfig>/visibleBtnShowCity}"
                press="onShowCity"
                class="sapUiSmallMarginEnd"
            />
            <Button
                id="btnHideCity"
                text="{i18n>hideCity}"
                visible="{jsonModelConfig>/visibleBtnHideCity}"
                press="onHideCity"
                class="sapUiSmallMarginEnd"
            />
            <Table
                id="idEmployeesTable"
                inset="false"
                items="{
			path: 'employee>/Employees',
			sorter: {
				path: 'EmployeeId'
			}
		}"
                itemPress="onCellPress"
            >
                <columns>
                    <Column>
                        <Text
                            visible="{jsonModelConfig>/visibleID}"
                            text="{i18n>colEmployeeId}"
                        />
                    </Column>
                    <Column>
                        <Text
                            visible="{jsonModelConfig>/visibleName}"
                            text="{i18n>colName}"
                        />
                    </Column>
                    <Column>
                        <Text
                            visible="{jsonModelConfig>/visibleCountry}"
                            text="{i18n>colCountry}"
                        />
                    </Column>
                    <Column visible="{jsonModelConfig>/visibleCity}">
                        <Text text="{i18n>colCity}" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem
                        vAlign="Middle"
                        type="Active"
                    >
                        <cells>
                            <ObjectIdentifier
                                title="{Name}"
                                text="{employee>EmployeeID}"
                            />
                            <Text
                                text="{employee>LastName}, {employee>FirstName}"
                            />
                            <Text text="{employee>Country}" />
                            <!-- <Text
                                text="{
                                        path: 'employee>Country',
                                        formatter: '.formatter.countryName'
                                     }"
                            /> -->
                            <Text text="{employee>City}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
