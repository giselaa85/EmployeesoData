<mvc:View
    controllerName="logaligroup.logali.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <content>
            <HBox>
                <Label
                    id="labelEmployee"
                    text="{i18n>labelEmployee}"
                    class="sapUiSmallMargin"
                />
                <Input
                    id="inputEmployee"
                    maxLength="6"
                    width="200px"
                    class="sapUiSmallMargin"
                    liveChange="onValidation"
                />
                <Label
                    id="labelCountry"
                    visible="false"
                    text="{i18n>labelCountry}"
                    class="sapUiSmallMargin"
                />
                <ComboBox
                    id="comboCountry"
                    visible="false"
                    class="sapUiSmallMargin"
                >
                    <core:Item
                        key="{i18n>keyUS}"
                        text="{i18n>valueUS}"
                    />
                    <core:Item
                        key="{i18n>keyUK}"
                        text="{i18n>valueUK}"
                    />
                    <core:Item
                        key="{i18n>keyES}"
                        text="{i18n>valueES}"
                    />
                </ComboBox>
            </HBox>
        </content>
    </Page>
</mvc:View>
