<mvc:View
    controllerName="logaligroup.logali.controller.Main"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true"    
>
    <Page showHeader="false">
        <content>
            <f:FlexibleColumnLayout
                id="flc"
                backgroundDesign="Solid"
                layout="{layout>/ActiveKey}"
            >
                <f:beginColumnPages>
                    <mvc:XMLView
                        id="masterEmployeeView"
                        viewName="logaligroup.logali.view.MasterEmployee"
                    />
                </f:beginColumnPages>
                <f:endColumnPages />
                <f:landmarkInfo />
                <f:midColumnPages>
                    <mvc:XMLView
                        id="detailEmployeeView"
                        viewName="logaligroup.logali.view.EmployeeDetails"
                    />
                </f:midColumnPages>
            </f:FlexibleColumnLayout>
        </content>
        <footer>
            <Toolbar>
                <Label text="{i18n>layout}" />
                <Select
                    items="{layout>/Layout}"
                    selectedKey="{layout>/ActiveKey}"
                >
                    <core:Item
                        key="{layout>Key}"
                        text="{layout>Text}"
                    />
                </Select>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
